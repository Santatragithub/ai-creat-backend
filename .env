# App
APP_NAME=ai-creat
APP_ENV=dev

# JWT
JWT_SECRET=changeme-super-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# Database
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/ai_creat
TEST_DATABASE_URL=sqlite:///./test.db

# Message broker / backend
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//
REDIS_URL=redis://redis:6379/0

# Celery queues
CELERY_QUEUE_PRIMARY=ai_creat.jobs.primary
CELERY_QUEUE_PRIORITY=ai_creat.jobs.priority
CELERY_QUEUE_DLQ=ai_creat.jobs.dlq

# AI Provider
AI_PROVIDER=mock
OPENAI_API_KEY=
GEMINI_API_KEY=

# CORS (comma-separated, optional)
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3000
